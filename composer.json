{
    "name": "daun/statamic-graphql-alternate-locales",
    "description": "List alternate locales of entries in Statamic GraphQL queries.",
    "license": "MIT",
    "type": "statamic-addon",
    "keywords": [
        "statamic",
        "graphql",
        "language",
        "locale",
        "site",
        "alternate",
        "i18n"
    ],
    "authors": [
        {
            "name": "Philipp Daun",
            "email": "post@philippdaun.net",
            "homepage": "https://philippdaun.net"
        }
    ],
    "support": {
        "email": "post@philippdaun.net"
    },
    "require": {
        "php": "^8.1",
        "statamic/cms": "^4.0 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Daun\\StatamicGraphQLAlternateLocales\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Daun\\StatamicGraphQLAlternateLocales\\ServiceProvider"
            ]
        },
        "statamic": {
            "description": "List alternate locales of entries in GraphQL queries.",
            "name": "GraphQL Alternate Locales"
        }
    }
}
